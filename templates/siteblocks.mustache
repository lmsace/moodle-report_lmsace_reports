{{#stacksitereports}}
<div class="lmsace-reports count-block">
    <ul>
        <li><a href="#"><i class="fa fa-users"></i> <span><b>{{users}}</b> {{#str}}users, core {{/str}}</span></a></li>
        <li><a href="#"><i class="fa fa-book"></i> <span><b>{{courses}}</b> {{#str}}courses, core {{/str}}</span></a></li>
