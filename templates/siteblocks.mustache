                                <a class="dropdown-item" href="#" value="all">{{#str}} overall, report_lmsace_reports {{/str}}</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="loadiconElement"></div>
                <div class="body-panel">
                    <div id="site-info-reports">
                        {{{overallsiteinfo}}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/overallsiteinfo}}


