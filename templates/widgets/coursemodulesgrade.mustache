{{!
    @template report_lmsace_reports/widgets/usermyassignments.

    Template for the User Assignment widgets.

    Example context (json):
    {

    }
}}

<div class="course-module-assignment-grade">
    <div class="assignments-block">
        <span><i class="fa fa-file-text-o"></i> <b>{{#str}} strassignments, report_lmsace_reports{{/str}}:</b></span>
        <span><b>{{counts.assign}}</b></span>
    </div>

    <div class="submissions-block">
        <span><i class="fa fa-check-square-o"></i> <b>{{#str}} strsubmitted, report_lmsace_reports{{/str}}:</b></span>
        <span><b>{{value.submission}}</b></span>
    </div>

    <div class="attempts-block">
        <span><i class="fa fa-check-square-o"></i> <b>{{#str}} strgraded, report_lmsace_reports{{/str}}:</b></span>
        <span><b>{{grades.assign}}</b></span>
    </div>

    <div class="average-block">
        <span><i class="fa fa-check-circle-o"></i> <b>{{#str}} average, report_lmsace_reports{{/str}}:</b></span>
        <span><b>{{avg.assign}}</b></span>
    </div>

</div>

<div class="course-module-quiz-grade">

    <div class="quizzes-block">
        <span><i class="fa fa-question-circle-o"></i> <b>{{#str}} strquizzes, report_lmsace_reports{{/str}}:</b></span>
        <span><b>{{counts.quiz}}</b></span>
    </div>

    <div class="attempts-block">
        <span><i class="fa fa-bullseye"></i> <b>{{#str}} strattempts, report_lmsace_reports{{/str}}:</b></span>
        <span><b>{{value.attempts}}</b></span>
    </div>

    <div class="graded-block">
        <span><i class="fa fa-bullseye"></i> <b>{{#str}} strgraded, report_lmsace_reports{{/str}}:</b></span>
        <span><b>{{grades.quiz}}</b></span>
    </div>

    <div class="average-block">
        <span><i class="fa fa-check-circle-o"></i> <b>{{#str}} average, report_lmsace_reports{{/str}}:</b></span>
        <span><b>{{avg.quiz}}</b></span>
    </div>


</div>
