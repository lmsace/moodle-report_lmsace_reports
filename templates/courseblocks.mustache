                {{/courseenrolcompletion}}

                {{#courseresources}}
                <div class="col-md-6">
                    <div class="course-status-block block-report">
                        <div class="main-panel">
                            <div class="header-panel">
                                <div class="heading-block">
                                    <h5> {{#str}} coursestauts_title, report_lmsace_reports{{/str}}</h5>
                                </div>
                                <div class="filter-block">
                                    <div class="dropdown show">
                                        <a class="btn btn-primary dropdown-toggle" href="#" role="button" id="daterangefiltermenu" {{datatoggle}} aria-haspopup="true" aria-expanded="false">{{#str}} overall, report_lmsace_reports {{/str}}
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <a class="dropdown-item" href="#" value="week">{{#str}} lastweek, report_lmsace_reports {{/str}}</a>
                                            <a class="dropdown-item" href="#" value="month">{{#str}} lastmonth, report_lmsace_reports {{/str}}</a>
                                            <a class="dropdown-item" href="#" value="year">{{#str}} lastyear, report_lmsace_reports {{/str}}</a>
                                            <a class="dropdown-item" href="#" value="all">{{#str}} overall, report_lmsace_reports {{/str}}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="body-panel">
                                <canvas id="course-status-chart"  width="100" height="100"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                {{/courseresources}}

                {{#coursemodulegrades}}
                <div class="col-md-6">
                    <div class="course-modulegrades-block block-report">
                        <div class="main-panel">
                            <div class="header-panel">
                                <div class="heading-block">
                                    <h5> {{#str}} coursemodulegrades_title, report_lmsace_reports{{/str}}</h5>
                                </div>
                            </div>
                            <div class="body-panel">
                                <div class="user-modules-reports">
                                    {{{coursemodulegrades}}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/coursemodulegrades}}

                {{#coursevisits}}
                <div class="col-md-12">
                    <div class="course-visits-block block-report">
                        <div class="main-panel">
                            <div class="header-panel">
                                <div class="heading-block">
                                    <h5> {{#str}} strcoursevisits, report_lmsace_reports{{/str}}</h5>
                                </div>
                                <div class="filter-block">
                                    <div class="dropdown show">
                                        <a class="btn btn-primary dropdown-toggle" href="#" role="button" id="daterangefiltermenu" {{datatoggle}} aria-haspopup="true" aria-expanded="false">
                                            {{#str}} lastyear, report_lmsace_reports {{/str}}
                                        </a>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                            <a class="dropdown-item" href="#" value="week">{{#str}} lastweek, report_lmsace_reports {{/str}}</a>
                                            <a class="dropdown-item" href="#" value="month">{{#str}} lastmonth, report_lmsace_reports {{/str}}</a>
                                            <a class="dropdown-item" href="#" value="year">{{#str}} lastyear, report_lmsace_reports {{/str}}</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="body-panel">
                                <canvas id="course-visits-chart"  width="100" height="400"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                {{/coursevisits}}

                {{#courseactiveinactiveusers}}
                <div class="col-md-12">
                    <div class="active-inactive-users-block block-report">
                        <div class="main-panel">
                            <div class="header-panel">
                                <div class="heading-block">
                                    <h5> {{#str}} active_inactiveuser_title, report_lmsace_reports{{/str}}</h5>
                                </div>
                            </div>
                            <div class="body-panel">
                                <canvas id="active-inactive-users-chart"  width="100" height="500"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                {{/courseactiveinactiveusers}}

                {{#coursehighscore}}
                <div class="col-md-12">
                    <div class="high-score-course-block block-report">
                        <div class="main-panel">
                            <div class="header-panel">
                                <div class="heading-block">
                                    <h5> {{#str}} highscore, report_lmsace_reports{{/str}}</h5>
                                </div>
                            </div>
                            <div class="body-panel">
                                <canvas id="high-score-course-chart"  width="100" height="100"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
                {{/coursehighscore}}
            </div>
        </div>
    </div>
