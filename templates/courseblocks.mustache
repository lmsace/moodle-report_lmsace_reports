{{#enablecourseblock}}

    <div class="course-report-block position-relative">

        {{^reportbase}}
            <div class="course-block report-lmsace-selector">{{{courseform}}}</div>
        {{/reportbase}}

        {{#availableteachercourses}}
            <div class="course-block report-lmsace-selector">{{{courseform}}}</div>
        {{/availableteachercourses}}

        {{#nocoursereports}}
            <p class="no-course-reports alert alert-info"> {{#str}} nocoursereports, report_lmsace_reports {{/str}} </p>
        {{/nocoursereports}}

        {{#reportbase}}
        <div class="nav-item refresh-button position-absolute">
            <a href="{{{purgeurl}}}" data-toggle="tooltip" title="{{#str}} reload, report_lmsace_reports {{/str}}"
                class="btn btn-primary"> <i class="fa fa-refresh"> </i>
                {{#str}} reload, report_lmsace_reports {{/str}}
            </a>
        </div>
        {{/reportbase}}

        {{#stackcoursereports}}
        <div class="lmsace-reports count-block">
            <ul>
                <li><a href="#"><i class="fa fa-sign-in"></i>  <span> {{enrolled}} {{#str}} enrolments, report_lmsace_reports{{/str}} </span></a></li>
                <li><a href="#"><i class="fa fa-cubes"></i> <span> {{modules}} {{#str}} modules, report_lmsace_reports{{/str}} </span></a></li>
                <li><a href="#"><i class="fa fa-gears"></i> <span> {{resources}} {{#str}} resources, report_lmsace_reports{{/str}} </span></a></li>
                {{#mostactivities}}
                    <li><a href="#"><i class="{{icon}}"></i> <span> {{count}} {{name}} </span></a></li>
                {{/mostactivities}}
            </ul>
        </div>
        {{/stackcoursereports}}

        <div class="report-element">
            <div class="row">

