{{!
    @template report_lmsace_reports/coursechooser.

    Template for the select course.

    Example context (json):
    {

    }
}}

<div class="course-block">
    <span>{{#str}}course, core {{/str}}</span>
    <div class="bsearch">
        <form action="{{pageurl}} #course-report" method="post">
            {{#availableteachercourses}}
                {{#reporttype}}
                <input type="hidden" name="report" value="{{reporttype}}">
                {{/reporttype}}
                {{#courseaction}}
                <input type="hidden" name="courseinfo" value="{{courseaction}}">
                {{/courseaction}}
            {{/availableteachercourses}}
            <select name="courseinfo" id="course-reports">
                {{#courses}}
                <option value="{{id}}" {{selected}}> {{coursename}} </option>
                {{/courses}}
                {{^courses}}
                    <option value=""> {{#str}} nocourses, report_lmsace_reports {{/str}} </option>
                {{/courses}}
            </select>
            <button type="submit" class="btn btn-primary" name="coursesumbit">{{#str}} sumbit, report_lmsace_reports{{/str}}</button>
        </form>
    </div>
</div>
