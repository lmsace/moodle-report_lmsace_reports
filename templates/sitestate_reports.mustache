{{!
    @template report_lmsace_reports/courseblocks.

    Template for the course reports.

    Example context (json):
    {
        "themedesignermode": "true",
        "debugging": "true",
        "addtionalplugins": "true"
    }
}}

<div class="table-block site-state-widget">
    <table class="table">

        <tbody>
            <tr>
                <td>{{#str}} themedesignermode, report_lmsace_reports{{/str}}</td>
                <td> <span class="badge {{themedesignermoderbadge}}"> {{themedesignermode}} </span> </td>
            </tr>
            <tr>
                <td>{{#str}} debugging, report_lmsace_reports{{/str}}</td>
                <td> <span class="badge {{debuggingbadge}}"> {{debugging}} </span> </td>
            <tr>
                <td>{{#str}} addtionalplugins, report_lmsace_reports{{/str}}</td>
                <td> {{addtionalplugins}} </td>
            </tr>
            <tr>
                <td >{{#str}} moodlesrc, report_lmsace_reports{{/str}}</td>
                <td class="moodlesrc-size"> </td>
            </tr>

            <tr>
                <td>{{#str}} moodledata, report_lmsace_reports{{/str}}</td>
                <td  class="moodledata-size"> </td>
            </tr>
        </tbody>
    </table>
</div>
