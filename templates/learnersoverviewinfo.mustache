{{!
    @template report_lmsace_reports/learnersoverviewinfo.

    Template for the learners overview widget.

    Example context (json):
    {
        "user": "demouser",
        "email": "demouser@gmail.com",
        "score" : "100",
        "completedcourses" : "10"
    }
}}

<div class="table-block">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">{{#str}}name, report_lmsace_reports{{/str}}</th>
                <th scope="col">{{#str}}email, report_lmsace_reports{{/str}}</th>
                <th scope="col">{{#str}}gradecourseprogress, report_lmsace_reports{{/str}}</th>
                <th scope="col">{{#str}}totalcourseprogress, report_lmsace_reports{{/str}}</th>
                <th scope="col">{{#str}}completioncourses, report_lmsace_reports{{/str}}</th>
                <th scope="col">{{#str}}accountcreated, report_lmsace_reports{{/str}}</th>
                <th scope="col">{{#str}}lastlogin, report_lmsace_reports{{/str}}</th>
            </tr>
        </thead>
        <tbody>
            {{#.}}
            <tr>
                <td>{{user}}</td>
                <td>{{email}}</td>
                <td>{{score}}%</td>
                <td>{{overallcourseprogress}}%</td>
                <td>{{completedcourses}}</td>
                <td>{{#userdate}} {{usercreation}} {{/userdate}}</td>
                <td>{{#userdate}} {{lastaccess}} {{/userdate}}</td>
            </tr>
            {{/.}}
        </tbody>
    </table>
</div>
